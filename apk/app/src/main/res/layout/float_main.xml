<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/er2"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/float_start"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cat_angry" />

    <ImageView
        android:id="@+id/float_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cat_bye" />

    <ImageView
        android:id="@+id/float_test"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cat_dance" />

    <ImageView
        android:id="@+id/float_go"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cat_cry" />

</LinearLayout>